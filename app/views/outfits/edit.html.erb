<h1>Edit this outfit.</h1>
<img src="<%=@outfit.image_url%>">

<%= form_for :outfit, html: { class: "outfitform"}, method: 'put',  url: user_outfit_path do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title, value: @outfit.title %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_area :caption, value: @outfit.caption , :size => "40x5"  %>
</p>

<p>
  <%= f.hidden_field :image_url %>
</p>

<p>
  <% genders = ["Ladies", "Gentlemen", "Doesn't Matter (Unisex)"] %>
  <%= f.select :gender, options_for_select(genders) %>
</p>

<p>
  <%= f.submit 'Edit your outfit', :class => "btn btn-1 btn-1a", :id => 'newoutfit'%>
</p>

<% end %>
